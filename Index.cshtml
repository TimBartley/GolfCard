@model IEnumerable<GolfCardReader.Models.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Golf Card</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-md-2 hidden-sm hidden-xs">Fort Cherry</div>
    <div class="col-md-1 col-xs-2">Hole</div>
    <div class="col-md-1 col-xs-1">1</div>
    <div class="col-md-1 col-xs-1">2</div>
    <div class="col-md-1 col-xs-1">3</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">5</div>
    <div class="col-md-1 col-xs-1">6</div>
    <div class="col-md-1 col-xs-1">7</div>
    <div class="col-md-1 col-xs-1">8</div>
    <div class="col-md-1 col-xs-1">9</div>
</div>

<div class="row">
    <div class="col-md-1 col-xs-1">@Html.DisplayNameFor(model => model.PlayerName)</div>
    <div class="col-md-1 hidden-sm hidden-xs">@Html.DisplayNameFor(model => model.Date)</div>
    <div class="col-md-1 col-xs-1">Par</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">3</div>
    <div class="col-md-1 col-xs-1">5</div>
    <div class="col-md-1 col-xs-1">3</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">4</div>
    <div class="col-md-1 col-xs-1">4</div>
</div>

@foreach (var item in Model)
{
    string[] Image = new string[9];
    string Style = "";

    if (item.teeOff == GolfCardReader.Models.Card.TeeOff.Red)
    {
        Style = "background-color:red";
    }
    else if (item.teeOff == GolfCardReader.Models.Card.TeeOff.Gold)
    {
        Style = "background-color:gold";
    }
    else if (item.teeOff == GolfCardReader.Models.Card.TeeOff.Blue)
    {
        Style = "background-color:cornflowerblue";
    }
    else if (item.teeOff == GolfCardReader.Models.Card.TeeOff.White)
    {
        Style = "background-color:beige";
    }

    #region Hole 1
    if (item.Score1 == 1)
    {
        Image[0] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score1 == item.Par4 - 2)
    {
        Image[0] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score1 == item.Par4 - 1)
    {
        Image[0] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score1 == item.Par4 + 1)
    {
        Image[0] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score1 >= item.Par4 + 2)
    {
        Image[0] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 2
    if (item.Score2 == 1)
    {
        Image[1] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score2 == item.Par4 - 2)
    {
        Image[1] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score2 == item.Par4 - 1)
    {
        Image[1] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score2 == item.Par4 + 1)
    {
        Image[1] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score2 >= item.Par4 + 2)
    {
        Image[1] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 3
    if (item.Score3 == 1)
    {
        Image[2] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score3 == item.Par4 - 2)
    {
        Image[2] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score3 == item.Par4 - 1)
    {
        Image[2] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score3 == item.Par4 + 1)
    {
        Image[2] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score3 >= item.Par4 + 2)
    {
        Image[2] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 4
    if (item.Score4 == 1)
    {
        Image[3] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score4 == item.Par3 - 1)
    {
        Image[3] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score4 == item.Par3 + 1)
    {
        Image[3] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score4 >= item.Par3 + 2)
    {
        Image[3] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 5
    if (item.Score5 <= 1)
    {
        Image[4] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score5 == item.Par5 - 3)
    {
        Image[4] = "background-image:url(../../Images/AlbatrossSmall.png)";
    }
    else if (item.Score5 == item.Par5 - 2)
    {
        Image[4] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score5 == item.Par5 - 1)
    {
        Image[4] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score5 == item.Par5 + 1)
    {
        Image[4] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score5 >= item.Par5 + 2)
    {
        Image[4] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 6
    if (item.Score6 <= 1)
    {
        Image[5] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score6 == item.Par3 - 1)
    {
        Image[5] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score6 == item.Par3 + 1)
    {
        Image[5] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score6 >= item.Par3 + 2)
    {
        Image[5] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 7
    if (item.Score7 <= 1)
    {
        Image[6] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score7 == item.Par4 - 2)
    {
        Image[6] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score7 == item.Par4 - 1)
    {
        Image[6] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score7 == item.Par4 + 1)
    {
        Image[6] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score7 >= item.Par4 + 2)
    {
        Image[6] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 8
    if (item.Score8 <= 1)
    {
        Image[7] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score8 == item.Par4 - 2)
    {
        Image[7] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score8 == item.Par4 - 1)
    {
        Image[7] = "background-image:url(../../Images/Birdiesmall.png)";
    }
    else if (item.Score8 == item.Par4 + 1)
    {
        Image[7] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score8 >= item.Par4 + 2)
    {
        Image[7] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    #region Hole 9
    if (item.Score9 <= 1)
    {
        Image[8] = "background-image:url(../../Images/HoleInOneSmall.png)";
    }
    else if (item.Score9 == item.Par4 - 2)
    {
        Image[8] = "background-image:url(../../Images/EagleSmall.png)";
    }
    else if (item.Score9 == item.Par4 - 1)
    {
        Image[8] = "background-image:url(../../Images/BirdieSmall.png)";
    }
    else if (item.Score9 == item.Par4 + 1)
    {
        Image[8] = "background-image:url(../../Images/BogeySmall.png)";
    }
    else if (item.Score9 >= item.Par4 + 2)
    {
        Image[8] = "background-image:url(../../Images/DoubleBogeySmall.png)";
    }
    #endregion;

    <div style=@Style class="row">
        <div class="col-md-1 col-xs-2">@Html.DisplayFor(modelItem => item.PlayerName)</div>
        <div class="col-md-2 hidden-sm hidden-xs">@Html.DisplayFor(modelItem => item.Date)</div>
        <div class="col-md-1 col-xs-1"style=@Image[0]> @Html.DisplayFor(modelItem => item.Score1)</div>
        <div class="col-md-1 col-xs-1"style=@Image[1]> @Html.DisplayFor(modelItem => item.Score2)</div>
        <div class="col-md-1 col-xs-1"style=@Image[2]> @Html.DisplayFor(modelItem => item.Score3)</div>
        <div class="col-md-1 col-xs-1"style=@Image[3]> @Html.DisplayFor(modelItem => item.Score4)</div>
        <div class="col-md-1 col-xs-1"style=@Image[4]> @Html.DisplayFor(modelItem => item.Score5)</div>
        <div class="col-md-1 col-xs-1"style=@Image[5]> @Html.DisplayFor(modelItem => item.Score6)</div>
        <div class="col-md-1 col-xs-1"style=@Image[6]> @Html.DisplayFor(modelItem => item.Score7)</div>
        <div class="col-md-1 col-xs-1"style=@Image[7]> @Html.DisplayFor(modelItem => item.Score8)</div>
        <div class="col-md-1 col-xs-1"style=@Image[8]> @Html.DisplayFor(modelItem => item.Score9)</div>
    </div>
    <div style=@Style class="row">
        <div class="col-md-offset-2 col-xs-6">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </div>
        <div class="col-md-4 col-xs-6">
            Total:@(@item.Score1 + @item.Score2 + @item.Score3 +
            @item.Score4 + @item.Score5 + @item.Score6 +
            @item.Score7 + @item.Score8 + @item.Score9)
        </div>
    </div>
    <br />
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
        <li data-target="#myCarousel" data-slide-to="7"></li>
        <li data-target="#myCarousel" data-slide-to="8"></li>
        <li data-target="#myCarousel" data-slide-to="9"></li>
    </ol>
    <div class="carousel-inner" role="listbox" align="center">
        <div class="item active">
            <img src="~/Images/One.png" alt="Hole 1">
        </div>
        <div class="item">
            <img src="~/Images/Two.png" alt="Hole 2">
        </div>
        <div class="item">
            <img src="~/Images/Three.png" alt="Hole 3">
        </div>
        <div class="item">
            <img src="~/Images/Four.png" alt="Hole 4">
        </div>
        <div class="item">
            <img src="~/Images/Five.png" alt="Hole 5">
        </div>
        <div class="item">
            <img src="~/Images/Six.png" alt="Hole 6">
        </div>
        <div class="item">
            <img src="~/Images/Seven.png" alt="Hole 7">
        </div>
        <div class="item">
            <img src="~/Images/Eight.png" alt="Hole 8">
        </div>
        <div class="item">
            <img src="~/Images/Nine.png" alt="Hole 9">
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>